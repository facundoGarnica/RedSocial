{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/LoginRegister.css') }}">
{% endblock %}


{% block body %}
<div class="login-container">
	<h2 class="login-title">Iniciar sesión</h2>

	{% if error %}

<div class="login-error">
	{{ error.messageKey|trans(error.messageData, 'security') }}
</div>{% endif %}


<form method="post" class="login-form">

        <label for="username">Email</label>
<input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required>


<label for="password">Contraseña</label>
<input type="password" name="_password" id="password" autocomplete="current-password" required>


<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


<button type="submit">Ingresar</button>

    </form>
<a href="{{ path('app_home') }}">
	<button class="btnregresar">Volver al menu</button>
</a></div>

{% endblock %}
